{
    "tasks": [
        {
            "label": "Prepare output directory",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "New-Item -ItemType Directory -Force -Path \"${workspaceFolder}\\out\" | Out-Null"
            ],
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe build active file",
            "command": "C:/Program Files/LLVM/bin/clang++.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-O0",
                "-g",
                "${workspaceFolder}\\main.cpp",
                "-o",
                "${workspaceFolder}\\out\\main.exe"
            ],
            "options": {
                "cwd": "C:/Program Files/LLVM/bin"
            },
            "dependsOn": [
                "Prepare output directory"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Debug build task."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe build active file (release)",
            "command": "C:/Program Files/LLVM/bin/clang++.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-O2",
                "-DNDEBUG",
                "${workspaceFolder}\\main.cpp",
                "-o",
                "${workspaceFolder}\\out\\main.exe"
            ],
            "options": {
                "cwd": "C:/Program Files/LLVM/bin"
            },
            "dependsOn": [
                "Prepare output directory"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Release build task."
        }
    ],
    "version": "2.0.0"
}
